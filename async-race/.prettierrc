{
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "preserve_newlines": false,
  "newline_between_rules": false,
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "singleQuote": true,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
